<Window x:Class="IZBankingATMAdmin.Popup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IZBankingATMAdmin"
        mc:Ignorable="d"
        Title="Popup" Height="200" Width="300" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,1">
                <GradientStop Color="#FFE63070" Offset="1"/>
                <GradientStop Color="#FFFE8704" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock Text="Toevoegen van klant is gelukt!" Margin="0 40 0 0" Foreground="White" TextAlignment="Center" FontSize="16" FontFamily="Microsoft Sans Serif"></TextBlock>
        <Button Content="Dashboard" Click="Succes" Width="120" Margin="0 100 0 0"></Button>
    </Grid>
</Window>
